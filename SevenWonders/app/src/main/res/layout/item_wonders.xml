<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wondersItem"
    >
        <ImageView
            android:id="@+id/imgsCards"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@color/colorPrimary"
            android:scaleType="centerCrop"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tituloCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:layout_gravity="start"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/descripcionCards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="13dp"
            android:layout_marginLeft="177dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="55dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver más..."
            android:textSize="13dp"
            android:textStyle="bold"
            android:layout_marginLeft="177dp"
            android:layout_marginTop="110dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            >

            <ImageView
                android:id="@+id/estrella1Cards"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_marginLeft="177dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="31dp"
                />

            <ImageView
                android:id="@+id/estrella2Cards"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_marginTop="31dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/estrella3Cards"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_marginTop="31dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/estrella4Cards"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_marginTop="31dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/estrella5Cards"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_marginTop="31dp"
                android:layout_marginRight="5dp"
                />


            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000 Review - 700 Likes"
                android:layout_marginTop="27dp"
                android:textSize="12dp"
                android:layout_marginRight="2dp"
                />
        </LinearLayout>
</RelativeLayout>
